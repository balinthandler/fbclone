<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">
        <%= render 'request' %>
        <div class="title is-5">
          <% if @friends_count <= 1 %>
            Your have <%= @friends_count %> friend
          <% else %>
            Your have <%= @friends_count %> friends
          <% end %>
        </div>
        <% @friends.each do |friend|%>
          <div class="box">
            <div class="level">
              <div class="level-left">
                <div class="level-item">
                  <%= link_to "#{friend.firstname} #{friend.lastname}", user_path(friend) %>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= link_to "Remove friend", invitations_destroy_path(user_id: friend.id, friend_id: current_user.id), class: "button is-danger"%>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>