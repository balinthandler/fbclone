<% if !@invitations.empty? %>
  <div class="box">
    <div class="title is-5">
        Incoming friend request
    </div>
    <% @invitations.each do |invitation| %>
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <%= "#{invitation.user.firstname} #{invitation.user.lastname}" %>
          </div>
        </div>
        <div class="level-right">
          <div class="level-item">
            <div class="is-grouped">
              <%= link_to "Accept", invitations_update_path(user_id: invitation.user_id, friend_id: invitation.friend_id), class: "button is-primary" %>
              <%= link_to "Decline", invitations_destroy_path(user_id: invitation.user_id, friend_id: invitation.friend_id), class: "button is-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>