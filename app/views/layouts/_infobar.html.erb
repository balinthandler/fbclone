<div class="column is-4 is-offset-4">
  <div class="level">
  <div class="level-item">
    <%= link_to root_path do %>
      <span class="fa-stack fa-lg ">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-home fa-stack-1x fa-inverse"></i>
      </span>
    <% end %>
  </div>
    <div class="level-item">
      <%= link_to profile_path do %>
        <span class="fa-stack fa-lg ">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-user-circle fa-stack-1x fa-inverse"></i>
        </span>
      <% end %>
    </div>
    <div class="level-item">
        <%= link_to friends_path do %>
          <% if @incoming_request && @incoming_request.count > 0 %> 
            <span class="fa-stack fa-lg" data-count="<%= @incoming_request.count %>">
          <% else %>
            <span class="fa-stack fa-lg">
          <% end %>
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fas fa-user-friends fa-stack-1x fa-inverse"></i>
        <% end %>
    </div>
    <div class="level-item">
      <%= link_to users_path do %>
        <span class="fa-stack fa-lg ">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-users fa-stack-1x fa-inverse"></i>
        </span>
      <% end %>
    </div>
  </div>
</div>