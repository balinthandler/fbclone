<% if @user != current_user %>
  <% if @invitation_to %>
    <% if @invitation_to.confirmed == true %>
      <%= link_to "Remove friend", invitations_destroy_path(user_id: current_user.id, friend_id: @user.id) %>
    <% else %>
      <%= link_to "Remove friend request", invitations_destroy_path(user_id: current_user.id, friend_id: @user.id) %>
    <% end %>
  <% elsif @invitation_from %>
    <% if @invitation_from.confirmed == true %>
      <%= link_to "Remove friend", invitations_destroy_path(user_id: current_user.id, friend_id: @user.id) %>
    <% else %>
      <%= link_to "Accept", invitations_update_path(user_id: @user.id, friend_id: current_user.id), class: "button is-primary"%>
      <%= link_to "Decline", invitations_destroy_path(user_id: @user.id, friend_id: current_user.id), class: "button is-danger"%>
    <% end %>
  <% else %>
    <%= link_to "Send friend request", invitations_create_path(friend_id: @user.id) %>
  <% end %>
<% end %>